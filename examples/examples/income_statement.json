{
  "id": "income_statement",
  "name": "Income Statement",
  "description": "Standard Income Statement with sections for revenue, expenses, and net income",
  "metadata": {
    "type": "financial_statement",
    "version": "1.0.0",
    "display_options": {
      "sign_convention": "revenue_positive",
      "show_subtotals": true,
      "decimal_places": 2
    }
  },
  "sections": [
    {
      "id": "revenue_section",
      "name": "Revenue",
      "description": "Revenue and related items",
      "items": [
        {
          "id": "revenue",
          "name": "Revenue",
          "node_id": "revenue", 
          "description": "Total revenue from operations",
          "sign_convention": "positive"
        },
        {
          "id": "returns_allowances",
          "name": "Returns and Allowances",
          "node_id": "returns_allowances",
          "description": "Value of returned products and customer allowances",
          "sign_convention": "negative"
        }
      ]
    },
    {
      "id": "gross_profit_section",
      "name": "Gross Profit",
      "description": "Calculation of gross profit",
      "items": [
        {
          "id": "net_revenue",
          "name": "Net Revenue",
          "type": "calculated",
          "description": "Revenue less returns and allowances",
          "calculation": {
            "type": "addition",
            "inputs": ["revenue", "returns_allowances"]
          }
        },
        {
          "id": "cost_of_goods_sold",
          "name": "Cost of Goods Sold",
          "node_id": "cogs",
          "description": "Direct costs attributable to goods sold",
          "sign_convention": "negative"
        },
        {
          "id": "gross_profit",
          "name": "Gross Profit",
          "type": "subtotal",
          "description": "Revenue less cost of goods sold",
          "calculation": {
            "type": "addition",
            "inputs": ["net_revenue", "cost_of_goods_sold"]
          }
        }
      ]
    },
    {
      "id": "operating_expenses_section",
      "name": "Operating Expenses",
      "description": "Operating expenses related to core business activities",
      "items": [
        {
          "id": "selling_expenses",
          "name": "Selling Expenses",
          "node_id": "selling_expenses",
          "description": "Expenses related to selling products or services",
          "sign_convention": "negative"
        },
        {
          "id": "general_admin_expenses",
          "name": "General and Administrative Expenses",
          "node_id": "g_and_a",
          "description": "Expenses related to general company operations",
          "sign_convention": "negative"
        },
        {
          "id": "research_development",
          "name": "Research and Development",
          "node_id": "r_and_d",
          "description": "Expenses related to research and development",
          "sign_convention": "negative"
        },
        {
          "id": "total_operating_expenses",
          "name": "Total Operating Expenses",
          "type": "subtotal",
          "description": "Sum of all operating expenses",
          "calculation": {
            "type": "addition",
            "inputs": ["selling_expenses", "general_admin_expenses", "research_development"]
          }
        }
      ]
    },
    {
      "id": "operating_income_section",
      "name": "Operating Income",
      "description": "Income from core operations",
      "items": [
        {
          "id": "operating_income",
          "name": "Operating Income",
          "type": "calculated",
          "description": "Gross profit less operating expenses",
          "calculation": {
            "type": "addition",
            "inputs": ["gross_profit", "total_operating_expenses"]
          }
        }
      ]
    },
    {
      "id": "other_income_expense_section",
      "name": "Other Income and Expenses",
      "description": "Non-operating income and expenses",
      "items": [
        {
          "id": "interest_income",
          "name": "Interest Income",
          "node_id": "interest_income",
          "description": "Income from interest-bearing assets",
          "sign_convention": "positive"
        },
        {
          "id": "interest_expense",
          "name": "Interest Expense",
          "node_id": "interest_expense",
          "description": "Expense from interest-bearing liabilities",
          "sign_convention": "negative"
        },
        {
          "id": "other_income",
          "name": "Other Income",
          "node_id": "other_income",
          "description": "Income from non-core activities",
          "sign_convention": "positive"
        },
        {
          "id": "other_expense",
          "name": "Other Expense",
          "node_id": "other_expense",
          "description": "Expense from non-core activities",
          "sign_convention": "negative"
        },
        {
          "id": "net_other_income_expense",
          "name": "Net Other Income (Expense)",
          "type": "subtotal",
          "description": "Sum of all non-operating income and expenses",
          "calculation": {
            "type": "addition",
            "inputs": ["interest_income", "interest_expense", "other_income", "other_expense"]
          }
        }
      ]
    },
    {
      "id": "income_before_tax_section",
      "name": "Income Before Taxes",
      "description": "Income before income tax expense",
      "items": [
        {
          "id": "income_before_tax",
          "name": "Income Before Income Taxes",
          "type": "calculated",
          "description": "Operating income plus net other income/expense",
          "calculation": {
            "type": "addition",
            "inputs": ["operating_income", "net_other_income_expense"]
          }
        }
      ]
    },
    {
      "id": "income_tax_section",
      "name": "Income Tax",
      "description": "Income tax expense",
      "items": [
        {
          "id": "income_tax_expense",
          "name": "Income Tax Expense",
          "node_id": "income_tax",
          "description": "Current and deferred income tax expense",
          "sign_convention": "negative"
        }
      ]
    },
    {
      "id": "net_income_section",
      "name": "Net Income",
      "description": "Final income after all expenses",
      "items": [
        {
          "id": "net_income",
          "name": "Net Income",
          "type": "calculated",
          "description": "Income after income tax expense",
          "calculation": {
            "type": "addition",
            "inputs": ["income_before_tax", "income_tax_expense"]
          }
        }
      ]
    },
    {
      "id": "per_share_section",
      "name": "Per Share Data",
      "description": "Per share metrics",
      "items": [
        {
          "id": "basic_eps",
          "name": "Basic Earnings Per Share",
          "type": "calculated",
          "description": "Net income divided by weighted average shares outstanding",
          "calculation": {
            "type": "division",
            "inputs": ["net_income", "weighted_avg_shares_basic"],
            "parameters": {
              "denominator_index": 1
            }
          }
        },
        {
          "id": "diluted_eps",
          "name": "Diluted Earnings Per Share",
          "type": "calculated",
          "description": "Net income divided by diluted weighted average shares outstanding",
          "calculation": {
            "type": "division",
            "inputs": ["net_income", "weighted_avg_shares_diluted"],
            "parameters": {
              "denominator_index": 1
            }
          }
        }
      ]
    }
  ]
} 