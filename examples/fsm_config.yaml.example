# Example configuration file for fin_statement_model
# Copy this file to fsm_config.yaml and customize as needed

# Project name for identification
project_name: my_financial_analysis

# Logging configuration
logging:
  level: INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  detailed: false  # Include file and line numbers in logs
  log_to_file: false
  log_file_path: ./logs/fsm.log

# Input/Output configuration
io:
  default_excel_sheet: Sheet1
  default_csv_delimiter: ","
  auto_create_output_dirs: true
  validate_on_read: true
  # default_mapping_configs_dir: ./mappings  # Custom mapping configs

# Forecasting configuration
forecasting:
  default_method: historical_growth  # simple, historical_growth, curve, statistical, ml
  default_periods: 5
  default_growth_rate: 0.0  # For simple method
  min_historical_periods: 3
  allow_negative_forecasts: true

# Data preprocessing configuration
preprocessing:
  auto_clean_data: true
  fill_missing_with_zero: false
  remove_empty_periods: true
  standardize_period_format: true
  # default_normalization_type: percent_of  # percent_of, minmax, standard, scale_by

# Display and formatting configuration  
display:
  default_number_format: ",.2f"
  default_currency_format: "$,.2f"
  default_percentage_format: ".1%"
  hide_zero_rows: false
  contra_display_style: parentheses  # parentheses, brackets, negative
  thousands_separator: ","
  decimal_separator: "."
  default_units: USD
  scale_factor: 1.0  # Use 0.001 to display in thousands

# API and external service configuration
api:
  # fmp_api_key: your_api_key_here  # Or use FSM_API_FMP_API_KEY env var
  fmp_base_url: https://financialmodelingprep.com/api/v3
  api_timeout: 30
  api_retry_count: 3
  cache_api_responses: true
  cache_ttl_hours: 24

# Metrics configuration
metrics:
  # custom_metrics_dir: ./custom_metrics
  validate_metric_inputs: true
  auto_register_metrics: true

# Data validation configuration
validation:
  strict_mode: false
  check_balance_sheet_equation: true
  max_acceptable_variance: 0.01
  warn_on_negative_assets: true
  validate_sign_conventions: true

# Automatically save configuration changes
auto_save_config: false 